<%= link_to 'logout', destroy_user_session_path, method: :delete %>


<%= form_for @connection do |f| %>
  <%= f.collection_select :connection_type, Connection.all, :type, :type %>
  <%= f.fields_for :person_of_interest do |p| %>
        <%= p.text_field :name %>
        <%= p.text_field :email %>
        <%= p.text_field :phone_number%>
        <%= p.text_field :occupation %>
        <%= p.text_field :goals %>
  <%= f.submit %>
  <% end %>
<% end %>