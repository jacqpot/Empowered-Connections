<%= form_for @prompt do |f| %>
<%= f.hidden_field :person_of_interest_id, :value => person_of_interest.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>

<%= f.text_field :description, placeholder: (@prompt.errors.full_messages_for(:description).first || "Enter follow up "), class: 'field' %>
<%= f.date_field :due_date, placeholder: (@prompt.errors.full_messages_for(:due_date).first || "mm/dd/yy"), class: 'field' %>
<%= f.text_field :notes, placeholder: (@prompt.errors.full_messages_for(:notes).first || "Things to remember"), class: 'field' %>
<%= flash[:errors] if flash[:errors] %>
<%= f.submit %>
<% end %>